generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Player{
  playerId  Int @id @default(autoincrement())
  device  Device @relation(fields: [], references: [deviceId])
  healthRemaining Float
  target  Player @relation(fields: [], references: [playerId])
  attacker  Player @relation(fields: [], references: [playerId])//optional
  username  String
  kills Int
  createdAt DateTime  @default(now())
}

model Device{
  deviceId  Int @id @default(autoincrement())
  bluetoothStatus Boolean
  player  Player  @relation(fields: [], references: [playerId])
  createdAt DateTime  @default(now())
}

model Lobby{
  lobbyId  Int @id @default(autoincrement())
  lobbyCode String
  host Device @relation(fields: [], references: [deviceId])
  playerList Player[]
  gameTimeLimit DateTime
  health  Float
  lobbyName String
  playerLimit Int
  deviceType  String //optional
  createdAt DateTime  @default(now())
}